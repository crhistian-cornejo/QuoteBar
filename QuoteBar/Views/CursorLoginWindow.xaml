<Window
    x:Class="QuoteBar.Views.CursorLoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Sign in to Cursor">

    <Grid Background="#1a1a2e">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2d2d44" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                    <FontIcon Glyph="&#xE8A5;" Foreground="#007AFF" FontSize="20"/>
                    <TextBlock 
                        Text="Sign in to Cursor" 
                        FontSize="16" 
                        FontWeight="SemiBold" 
                        Foreground="White"
                        VerticalAlignment="Center"/>
                </StackPanel>
                
                <Button 
                    x:Name="CancelButton"
                    Grid.Column="1"
                    Content="Cancel"
                    Click="OnCancelClick"
                    Background="Transparent"
                    Foreground="#888"/>
            </Grid>
        </Border>

        <!-- WebView2 Container -->
        <Grid Grid.Row="1">
            <!-- Loading overlay -->
            <Border
                x:Name="LoadingOverlay"
                Background="#1a1a2e"
                Visibility="Visible"
                Canvas.ZIndex="10">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="16">
                    <FontIcon
                        x:Name="LoadingSpinner"
                        Glyph="&#xE72C;"
                        Foreground="#007AFF"
                        FontSize="32"/>
                    <TextBlock
                        x:Name="LoadingText"
                        Text="Loading Cursor login..."
                        Foreground="#888"
                        HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- WebView2 will be added here programmatically -->
            <Border x:Name="WebViewContainer"/>
        </Grid>

        <!-- Footer with status -->
        <Border Grid.Row="2" Background="#2d2d44" Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <FontIcon 
                    x:Name="StatusIcon"
                    Grid.Column="0"
                    Glyph="&#xE72E;" 
                    Foreground="#888" 
                    FontSize="14"
                    Margin="0,0,8,0"/>
                    
                <TextBlock 
                    x:Name="StatusText"
                    Grid.Column="1"
                    Text="Waiting for login..." 
                    Foreground="#888"
                    FontSize="12"
                    VerticalAlignment="Center"
                    TextTrimming="CharacterEllipsis"/>
            </Grid>
        </Border>
    </Grid>
</Window>

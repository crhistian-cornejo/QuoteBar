<Window
    x:Class="QuoteBar.Views.DroidLoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Sign in to Droid">

    <Grid Background="#0d1117">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#161b22" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                    <FontIcon Glyph="&#xE99A;" Foreground="#10B981" FontSize="20"/>
                    <TextBlock 
                        Text="Sign in to Droid" 
                        FontSize="16" 
                        FontWeight="SemiBold" 
                        Foreground="White"
                        VerticalAlignment="Center"/>
                </StackPanel>
                
                <Button 
                    x:Name="CancelButton"
                    Grid.Column="1"
                    Content="Cancel"
                    Click="OnCancelClick"
                    Background="Transparent"
                    Foreground="#888"/>
            </Grid>
        </Border>

        <!-- CLI Recommendation Banner -->
        <Border 
            x:Name="CLIBanner"
            Grid.Row="1" 
            Background="#1c2128" 
            BorderBrush="#30363d"
            BorderThickness="0,0,0,1"
            Padding="16,12"
            Visibility="Visible">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <FontIcon 
                    Grid.Column="0" 
                    Glyph="&#xE946;" 
                    Foreground="#58a6ff" 
                    FontSize="16"
                    Margin="0,0,12,0"
                    VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Spacing="2">
                    <TextBlock 
                        Text="Recommended: Use Droid CLI for automatic authentication" 
                        Foreground="#c9d1d9"
                        FontSize="12"
                        FontWeight="SemiBold"/>
                    <TextBlock 
                        Text="Install Droid CLI and run 'droid' once to authenticate securely." 
                        Foreground="#8b949e"
                        FontSize="11"
                        TextWrapping="Wrap"/>
                </StackPanel>
                
                <Button
                    Grid.Column="2"
                    Content="Learn more"
                    Foreground="#58a6ff"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="8,4"
                    VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- WebView2 Container -->
        <Grid Grid.Row="2">
            <!-- Loading overlay -->
            <Border
                x:Name="LoadingOverlay"
                Background="#0d1117"
                Visibility="Visible"
                Canvas.ZIndex="10">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="16">
                    <FontIcon
                        x:Name="LoadingSpinner"
                        Glyph="&#xE72C;"
                        Foreground="#10B981"
                        FontSize="32"/>
                    <TextBlock
                        x:Name="LoadingText"
                        Text="Loading Factory login..."
                        Foreground="#8b949e"
                        HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- WebView2 will be added here programmatically -->
            <Border x:Name="WebViewContainer"/>
        </Grid>

        <!-- Footer with status -->
        <Border Grid.Row="3" Background="#161b22" Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <FontIcon 
                    x:Name="StatusIcon"
                    Grid.Column="0"
                    Glyph="&#xE72E;" 
                    Foreground="#8b949e" 
                    FontSize="14"
                    Margin="0,0,8,0"/>
                    
                <TextBlock 
                    x:Name="StatusText"
                    Grid.Column="1"
                    Text="Waiting for login..." 
                    Foreground="#8b949e"
                    FontSize="12"
                    VerticalAlignment="Center"
                    TextTrimming="CharacterEllipsis"/>
            </Grid>
        </Border>
    </Grid>
</Window>
